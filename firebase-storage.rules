rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 音声ファイル用のルール
    match /audio/{userId}/{fileName} {
      // 認証されたユーザーは自分のファイルにアクセス可能
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 25 * 1024 * 1024 && // 25MB以下
                     request.resource.contentType.matches('audio/.*'); // 音声ファイルのみ
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // その他のファイル（一時的に全ユーザーに許可 - 開発用）
    match /{allPaths=**} {
      // 開発環境用：認証済みユーザーは読み書き可能
      // 本番環境では、より厳密なルールに変更してください
      allow read, write: if request.auth != null;
    }
  }
}